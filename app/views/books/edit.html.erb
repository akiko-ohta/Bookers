<body>
  <h1>Editing Book</h1>

  <div class="main">
    <%if @book.errors.any? %>
    <div class="errors">
      <div class="error">
        <strong><%= @book.errors.count %> errors prohibitied this book from being saved:</strong>
      </div>
      <ul class="error-box">
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
    <%= form_with model: @book do |f| %>
      <div class="error-form">
        <p class="field_with_errors">Title</p>
  	    <%= f.text_field :title %>
  	  </div>
  	  <div class="error-form">
        <p class="field_with_errors">Body</p>
   	    <%= f.text_area :body %>
   	  </div>
      <p><%= f.submit 'Update Book' %></p>
    <% end %>
    <% else %>
      <%= form_with model: @book do |f| %>
      <p>Title</p>
      <%= f.text_field :title %>
      <p>Body</p>
      <%= f.text_area :body %>
      <p><%= f.submit 'Update Book' %></p>
    <% end %>
  <% end %>
  </div>

  <div class="footer-button">
    <%= link_to "Show", book_path(@book.id) %>
    â”‚
    <%= link_to "Back", books_path %>
  </div>
</body>