<body>
  <h1>Books</h1>
  <table>
    <tr>
      <th class="title">Title</th>
      <th class="body">Body</th>
      <th colspan="3"></th>
    </tr>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to 'Show', book_path(book.id) %></td> 
      <td><%= link_to 'Edit', edit_book_path(book.id) %></td>
      <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
    </tr>
    <% end %>
  </table>

  <h2>New book</h2>
  <%if @book.errors.any? %>
    <div class="errors">
      <div class="error">
        <strong><%= @book.errors.count %> errors prohibitied this book from being saved:</strong>
      </div>
      <ul class="error-box">
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
    <%= form_with model: @book do |f| %>
      <div class="error-form">
        <p class="field_with_errors">Title</p>
  	    <%= f.text_field :title %>
  	  </div>
  	  <div class="error-form">
        <p class="field_with_errors">Body</p>
   	    <%= f.text_area :body %>
   	  </div>
      <p><%= f.submit 'Create Book' %></p>
    <% end %>
    <% else %>
      <%= form_with model: @book do |f| %>
      <p>Title</p>
      <%= f.text_field :title %>
      <p>Body</p>
      <%= f.text_area :body %>
      <p><%= f.submit 'Create Book' %></p>
    <% end %>
  <% end %>
</body>